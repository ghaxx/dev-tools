<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{HH:mm:ss.SSS}][%-5level][%thread][%-36logger{36}] %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="pl" level="info"/>
    <logger name="client.github.request.url" level="off"/>
    <logger name="client.github.request.data" level="off"/>
    <logger name="client.github.request.response" level="off"/>

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>